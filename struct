#include <iostream>
#include <string>
using namespace std;

const int n = 5;

struct MyStruct
{
	int year[n];
	string color[n];
	bool l[n];
	double speed[n];
};

void availability(MyStruct *a, int n)
{
	//выводим наличие автомобилей
	for (int i = 0; i < n; i++)
	{
		a->l[i] = true;
	}
	cout << "проверка наличия автомобилей" << endl;
	for (int i = 0; i < n; i++)
	{
		cout << "машина №: " << i << " " << a->l[i] << endl;
	}
}

void f(MyStruct *a, int n)
{
	//выводим цвет машины
	for (int i = 0; i < n; i++)
	{
		cout << "введите цвет машины № " << i << ":";
		cin >> a->color[i];
		cout << endl;
	}

	//выводим год выпуска машины
	for (int i = 0; i < n; i++)
	{
		cout << "введите год выпуска машины №" << i << ":";
		cin >> a->year[i];
		cout << endl;
	}
}

int main()
{
	setlocale(LC_ALL, "Russian");
	MyStruct car;
	availability(&car, n);
	f(&car, n);
	system("pause");
	return 0;
}